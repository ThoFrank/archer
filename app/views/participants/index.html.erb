<div class="container mx-auto p-6">
  <table class="min-w-full table-auto border-collapse border border-gray-200 shadow-md rounded-lg">
    <thead>
      <tr class="bg-gray-100 text-gray-700">
        <th class="px-6 py-3 text-left text-sm font-semibold border-b border-gray-300">Name</th>
        <th class="px-6 py-3 text-left text-sm font-semibold border-b border-gray-300">Date of Birth</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @participants.each do |p| %>
        <tr>
          <td class="px-6 py-4 text-gray-800">
            <%= "#{p.first_name} #{p.last_name}" %>
          </td>
          <td class="px-6 py-4 text-gray-600">
            <%= p.dob %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div class="mt-6">
  <%= link_to "Create a new one", {controller: "participants", action: "new"}, class: "inline-block px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %> 
  <%= link_to "back", @tournament, class: "inline-block px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </div>
</div>
