<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-gray-800 mb-4">
    Edit Tournament
  </h1>

  <%= render "form", tournament: @tournament %>

  <p class="mb-6">
    <%= link_to (t "Delete all participants"), tournament_path(@tournament), method: :delete, data: {
      turbo_confirm: "Are you sure?"
    },class: "inline-block px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
  </p>

</div>
