<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-gray-800 mb-2">
    <%= @tournament.name %>
    <%= link_to "✏️", edit_tournament_path(@tournament) if authenticated? %>
  </h1>

  <p class="text-lg text-gray-600 mb-6">
  <%= @tournament.date_start.andand.strftime("%d.%m.%Y") %>
  -
  <%= @tournament.date_end.andand.strftime("%d.%m.%Y") %>
  </p>

  <p class="text-lg text-gray-600 mb-6">
  <%= @tournament.intro %>
  </p>

  <p class="text-lg text-gray-600 mb-6">
  Place: <%= @tournament.place %>
  </p>

  <p>
    <%= link_to "Manage Participants", tournament_participants_path(@tournament), class: "inline-block px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </p>
</div>
