<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-gray-800 mb-2">
    <%= @tournament.name %>
    <%= link_to "✏️", edit_tournament_path(@tournament) if authenticated? %>
  </h1>

  <p class="text-lg text-gray-600 mb-6">
  <%= @tournament.date_start.andand.strftime("%d.%m.%Y") %>
  -
  <%= @tournament.date_end.andand.strftime("%d.%m.%Y") %>
  </p>

  <p class="text-lg text-gray-600 mb-6">
  <%= @tournament.intro %>
  </p>

  <p class="text-lg text-gray-600 mb-6">
  <%= t ".Place" %>: <%= @tournament.place %>
  </p>

</div>
