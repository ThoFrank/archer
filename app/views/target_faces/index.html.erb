<% content_for :title, "Target faces" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Target faces</h1>
    <%= link_to "New target face", new_tournament_target_face_path(@tournament), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="target_faces" class="min-w-full">
    <% if @target_faces.any? %>
      <% @target_faces.each do |target_face| %>
        <%= render target_face %>
        <p>
          <%= link_to target_face.name, tournament_target_face_path(@tournament, target_face), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No target faces found.</p>
    <% end %>
  </div>
</div>
