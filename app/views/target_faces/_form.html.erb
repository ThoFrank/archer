<%= form_with(model: [tournament, target_face], class: "contents") do |form| %>
  <% if target_face.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(target_face.errors.count, "error") %> prohibited this target_face from being saved:</h2>

      <ul class="list-disc ml-6">
        <% target_face.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-1">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:name).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.label :distance, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :distance, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:distance).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.label :size, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :size, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:size).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
