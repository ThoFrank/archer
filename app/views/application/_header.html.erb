<header class="flex">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    <!-- Left Side: Navigation Links -->
    <nav class="flex space-x-6">
      <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
      <% if @tournament && @tournament.id %>
        <a href="<%= tournament_path(@tournament) %>" class="text-gray-700 hover:text-blue-600 font-medium">Tournament</a>
        <a href="<%= tournament_tournament_classes_path(@tournament) %>" class="text-gray-700 hover:text-blue-600 font-medium">Classes</a>
        <a href="<%= tournament_target_faces_path(@tournament) %>" class="text-gray-700 hover:text-blue-600 font-medium">Target Faces</a>
      <% end %>
    </nav>

    <!-- Right Side: Login Button -->
    <div>
      <% if authenticated? %>
        <a href="<%=session_path%>" data-method="delete" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
          Log Out
        </a>
      <% else %>
        <a href="<%=session_path%>/new" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
          Log In
        </a>
      <% end %>
    </div>
  </div>
</header>
