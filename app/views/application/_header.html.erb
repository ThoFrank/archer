<header class="flex">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    <!-- Left Side: Navigation Links -->
    <nav class="flex space-x-6">
      <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
      <% if @tournament %>
        <%= link_to "Tournament", @tournament %>
        <%= link_to "Classes", tournament_tournament_classes_path(@tournament) %>
        <%= link_to "Target Faces", tournament_target_faces_path(@tournament) %>
      <% end %>
    </nav>

    <!-- Right Side: Login Button -->
    <div>
      <a href="/login" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
        Login
      </a>
    </div>
  </div>
</header>
