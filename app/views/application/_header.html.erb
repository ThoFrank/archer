        <a href="<%= tournament_participants_path(@tournament) %>" class="text-gray-700 hover:text-blue-600 font-medium"><%= t "Participants"%></a>
        <a href="<%= tournament_tournament_classes_path(@tournament) %>" class="text-gray-700 hover:text-blue-600 font-medium"><%= t "Classes"%></a>
