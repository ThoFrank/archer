<%= form_with(model: [ tournament, tournament_class], class: "space-y-4 max-w-lg mx-auto p-6 bg-white shadow rounded-lg") do |form| %>
  <% if tournament_class.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tournament_class.errors.count, "error") %> prohibited this tournament_class from being saved:</h2>

      <ul class="list-disc ml-6">
        <% tournament_class.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-1">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:name).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.label :age_start, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :age_start, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:age_start).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.label :age_end, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :age_end, class: "block w-full max-w-md border border-gray-300 rounded-lg px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" %>
    <% tournament.errors.full_messages_for(:age_end).each do |message| %>
      <div class="text-sm text-red-600"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.label :target_faces, class: "block text-sm font-medium text-gray-700" %>
    <% tournament.target_faces.each do |tf| %>
      <div class="block w-full max-w-md">
        <input type="checkbox" value="<%= tf.id %>" <%= checked="checked" if tournament_class.target_faces.include? tf %> name="tournament_class[target_faces][]" id="tf<%= tf.id %>">
        <label class="px-3 py-2 text-gray-900 focus:ring-blue-500 focus:border-blue-500" for="tf<%= tf.id %>"><%= tf.name %></label>
      </div>
    <% end %>
  </div>

  <div class="space-y-1">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
