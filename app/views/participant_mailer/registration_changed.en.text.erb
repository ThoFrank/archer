<%= render "salutation" %>
Your registration for <%= @registration.tournament.name %> on <%= l @registration.tournament.date_start.to_date %> changed:

Comment: <%= @registration.comment %>
<% if @registration.tournament.enforce_club %>
Club: <%= @registration.participants.first.club %>
<% end %>

<% @registration.participants.each_with_index do |participant,index| %>
  <% if @registration.participants.length > 1 %>
# <%= index %>
  <% end %>
Name: <%= participant.first_name %> <%= participant.last_name %>
Date of birth: <%= participant.dob %>
Class: <%= participant.tournament_class.name %>
Target Face: <%= participant.target_face.name %>
  <% if participant.tournament_class.price %>
Price: <%= participant.tournament_class.price / 100 %>,<%= format("%02d", participant.tournament_class.price % 100) %>€
  <% end %>

<% end %>
<% if @registration.participants.length > 1 %>
  <% sum = @registration.participants.map { |p| p.tournament_class.price }.compact.sum %>
  <% if sum > 0 %>
Total: <%= sum / 100 %>,<%= format("%02d", sum % 100) %>€
  <% end %>
<% end %>

<% if @registration.tournament.mail_text %>
<%= @registration.tournament.mail_text %>

<% end %>
<%= render "greeting" %>
