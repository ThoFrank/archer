<% content_for :title, "Editing tournament class" %>

<div class="w-full p-6">
  <h1 class="font-bold text-4xl">Editing tournament class</h1>

  <%= render "form", tournament: @tournament, group: @group %>

  <%= link_to "Show this tournament class", tournament_group_path(@tournament, @group), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to tournament classes", tournament_groups_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
